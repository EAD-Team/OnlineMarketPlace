<div class="container my-4">
    <br />
    <div style="margin-right:15px;margin-left:15px;">
        <h3>Latest Products</h3>
        <hr />
    </div>
    <br />
    <!--Carousel Wrapper-->
    <div id="multi-item-example" class="carousel slide carousel-multi-item" data-ride="carousel">

        <!--Controls-->
        <div class="controls-top">
            <a class="btn btn-purple btn-floating mr-auto" href="#multi-item-example" data-slide="prev"><i class="fas fa-chevron-left"></i></a>
            <a class="btn btn-purple btn-floating ml-auto" href="#multi-item-example" data-slide="next">
                <i class="fas fa-chevron-right"></i>
            </a>
        </div>
        <!--/.Controls-->
        <!--Indicators-->
        <ol class="carousel-indicators">
            <li data-target="#multi-item-example" data-slide-to="0" class="active"></li>
            <li data-target="#multi-item-example" data-slide-to="1"></li>

        </ol>
        <!--/.Indicators-->
        <!--Slides-->
        <div class="carousel-inner" role="listbox">

            @for(int i=0;i<DB.Count;i++)
            {
                @if(i==0)
                {
                    <div class="carousel-item active">
                    @for(int j=0;j<4;j++)
                    {
                        <ItemCard item="DB[j]"></ItemCard>
                    }
                    </div>
                    i += 3;
                }
                <div class="carousel-item">
            @for (int j=0; j < 4 && i<DB.Count; j++)
            {
                <ItemCard item="DB[i]"></ItemCard>
                i++;
            }
                </div>

            }
        </div>
        <!--/.Slides-->

    </div>
</div>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/css/mdb.min.css" rel="stylesheet">
    <title>Online Market Place</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-secondary navbar-dark position-relative">
        <!-- Container wrapper -->
        <div class="container-fluid row">
            <div class=" container-fluid col-2 float-left" style="min-width:90px;">
                <!-- Navbar brand -->
                <a class="navbar-brand" href="#">
                    <img src="~/appicon_w.svg" class="m-1" width="30" height="30" />Brand
                </a>
            </div>
            <div class="container-fluid navbar-nav col-10 float-left" style="align-content:center;" id="navbarSupportedContent">

                <div class="col-2 float-left"></div>
                <!-- Search -->
                <div class="input-group col-6" style="align-content:center;min-width:423px;">
                    <div class="form-outline">
                        <input type="search" id="form1" style="transform:translateY(6px);width:60vh;" class="form-control" placeholder="Search" />
                    </div>
                    <button type="button" class="btn btn-success btn-md">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                <div class="col-2 float-left"></div>
                <div class="col-2 float-left">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li><button type="button" class="btn btn-success">Login/Registor</button></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Container wrapper -->
    </nav>
    <nav class="navbar navbar-expand-lg navbar-light bg-light position-relative">
        <div class="container-fluid">
            <ul class="navbar-nav mr-auto">
                <!-- Dropdown -->
                <li class="nav-item">

                    <div class="dropdown">
                        <button class="btn btn-purple dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-list"></i>&nbsp;&nbsp;Categories
                        </button>
                        <div id="category" class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#" data-value="men">Men's Appearal</a>
                            <a class="dropdown-item" href="#" data-value="children">Children's Appearal</a>
                            <a class="dropdown-item" href="#" data-value="women">Women's Appearal</a>
                        </div>
                    </div>

                </li>
                <li class="nav-item">
                    <button type="button" class="btn btn-purple"><i class="fas fa-user"></i>&nbsp;&nbsp;Profile</button>
                </li>
                <li class="nav-item">
                    <button type="button" class="btn btn-purple btn-rounded btn-floating">
                        <i class="fas fa-envelope"></i>
                    </button>
                </li>
                
            </ul>
            <ul class="navbar-nav ">
                <li class="nav-item">
                    <button type="button" onclick="logout('faizan')" class="btn btn-danger mr-auto"><i class="fas fa-sign-out-alt"></i>&nbsp;&nbsp;Logout</button>
                </li>
            </ul>
        </div>
    </nav>
    <p1 id="prg">Layout</p1>
    <!-- Navbar -->
    @RenderBody()
    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/js/mdb.min.js"></script>
</body>
</html>
